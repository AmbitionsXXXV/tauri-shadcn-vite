{
	"compilerOptions": {
		"composite": true,
		"skipLibCheck": true,
		"module": "ESNext",
		"moduleResolution": "bundler",
		"allowSyntheticDefaultImports": true,

		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"],
			"@/lib": ["./src/lib/"],
			"@/hooks": ["./src/hooks/"],
			"@/registry": ["./src/registry/"],
			"@/components": ["./src/components/"]
		}
	},
	"include": ["vite.config.ts"]
}
